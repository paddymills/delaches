  "version": "2.0.0",
  "tasks": [
    {
      "label": "server",
      "type": "shell",
      "command": "watchexec",
      "args": [
        "--watch",
        "src",
        "--watch",
        "assets",
        "--watch",
        "public",
        "--exts",
        "rs,toml,jinja",
        "--restart",
        "--",
        "cargo",
        "run",
        "-q"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
